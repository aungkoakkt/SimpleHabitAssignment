<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <android.support.design.card.MaterialCardView
        android:id="@+id/cv_item_topic"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_marginBottom="@dimen/margin_medium"
        android:paddingTop="0dp"
        app:cardCornerRadius="@dimen/margin_small"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <android.support.v7.widget.AppCompatImageView
                android:id="@+id/iv_item_topic_bg"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="centerCrop"
                android:tint="@color/tint_color"
                app:srcCompat="@drawable/img_topic" />

            <android.support.v7.widget.AppCompatImageView
                android:id="@+id/iv_item_topic_icon"
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:layout_alignParentStart="true"
                android:layout_centerInParent="true"
                android:layout_margin="@dimen/margin_medium_3"
                app:srcCompat="@drawable/ic_wb_incandescent" />

            <TextView
                android:id="@+id/tv_item_topic_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_above="@id/tv_item_topic_description"
                android:layout_centerInParent="true"
                android:layout_toEndOf="@id/iv_item_topic_icon"
                android:text="Basics"
                android:textColor="@android:color/white"
                android:textSize="@dimen/text_regular_2x" />

            <TextView
                android:id="@+id/tv_item_topic_description"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_marginBottom="20dp"
                android:paddingTop="@dimen/margin_medium"
                android:paddingBottom="0dp"
                android:layout_toEndOf="@id/iv_item_topic_icon"
                android:text="Learn mediatation fundamentals"
                android:textColor="@android:color/white"
                android:textSize="@dimen/text_regular" />
        </RelativeLayout>
    </android.support.design.card.MaterialCardView>
</android.support.constraint.ConstraintLayout>